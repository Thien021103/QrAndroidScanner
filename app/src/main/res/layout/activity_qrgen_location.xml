<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".qrgendetail.QRGenLocationActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:textSize="30sp"
        android:gravity="center"
        android:text="LOCATION QR" />

    <ImageButton
        android:id="@+id/genLocationHomeBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/green_custom_text_box"
        android:contentDescription="@string/home_button"
        tools:srcCompat="@drawable/baseline_home_24" />

    <Button
        android:id="@+id/qrLocationGenBtn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="540dp"
        android:textSize="25sp"
        android:text="@string/gen_qr" />

    <EditText
        android:id="@+id/qrLatitude"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginTop="250dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:textSize="25sp"
        android:hint="@string/gen_latitude"/>

    <EditText
        android:id="@+id/qrLongitude"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:ems="10"
        android:layout_marginTop="380dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:inputType="numberDecimal"
        android:textSize="25sp"
        android:hint="@string/gen_longitude"/>
</RelativeLayout>